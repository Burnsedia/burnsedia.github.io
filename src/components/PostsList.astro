---
import { getCollection } from 'astro:content';
import FormattedDate from "./FormattedDate.astro"
import Card from "./Card.astro"
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<section class="py-12 noise bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-cyan-400 via-slate-950 to-slate-950 sm:bg-[radial-gradient(ellipse_at_bottom,_var(--tw-gradient-stops))] from-cyan-400 via-slate-950 to-slate-950 flex items-center justify-center">
	<div class="bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] flex justify-center w-full">
		<div class="grid grid-cols-1 sm:grid-cols-2 px-12 gap-x-64 items-center max-w-2xl">
			{
				posts.map((post) => (
					<div class="py-4 px-4">
						<FormattedDate date={post.data.pubDate} />
						<a href={`/blog/${post.slug}/`}><Card title={post.data.title} description={post.data.description} /></a>
					</div>
				))
			}  
		</div>
	</div>
</section>

