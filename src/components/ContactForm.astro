<script>
  // Ensure Google Analytics gtag.js script is loaded before running this script

  // Event listener for the 'Buy Now' button click
  document.getElementById('myBuyButton').addEventListener('click', function() {
    gtag('event', 'purchase', { // Use 'purchase' or a relevant event name
      'event_category': 'Sales',
      'event_label': 'Buy Now Button',
      'value': 1 // Adjust the value to represent the event's value to your business
    });
  });

  // Event listener for the 'Schedule Meeting' link click
  document.getElementById('myBookButton').addEventListener('click', function() {
    gtag('event', 'schedule_meeting', { // Use 'schedule_meeting' or a relevant event name
      'event_category': 'Engagement',
      'event_label': 'Schedule Meeting Link',
      'value': 1 // Adjust the value as needed
    });
  });
</script>
