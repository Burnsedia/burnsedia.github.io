---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink id="home" href="/">Home</HeaderLink>
		<HeaderLink id="blog" href="/blog">Blog</HeaderLink>
		<HeaderLink id="about" href="/about">About</HeaderLink>
		<HeaderLink id="github" href="https://github.com/Burnsedia" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}

  #home{
    text-align: left;
  }
  #blog{
    text-align: right;
  }
  #about{
    text-align: right;
  }
  #github{
    text-align: right;
  }
</style>

