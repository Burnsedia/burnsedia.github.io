---
import { Image } from "astro:assets";
import { SITE_DESCRIPTION } from "../consts";
import LOGO from "../assets/CyberPunkLogo2.jpg";
import { Typing } from "./typing";
---

<section class="hero py-12 noise">
  <div class="hero-content w-full flex flex-col lg:flex-row items-center gap-10">
    
    <!-- Image Container -->
    <div class="w-full max-w-xs sm:max-w-sm md:max-w-md lg:w-1/2">
      <div class="mask mask-hexagon ring ring-info ring-offset-4 ring-offset-info p-2 aspect-square mx-auto">
        <Image
          src={LOGO}
          alt="Burnsedia Cyberpunk Logo"
          loading="lazy"
          class="w-full h-full object-cover"
        />
      </div>
    </div>

    <!-- Text Content -->
    <div class="lg:w-1/2 space-y-6 px-3">
      <header>
        <h1 class="text-3xl sm:text-6xl font-bold">
          {SITE_DESCRIPTION}
        </h1>
        <Typing client:load />
      </header>

      <div>
        <h2 class="text-2xl font-bold mb-4">Here's how it works:</h2>

        <ol class="list-decimal space-y-2 px-6 text-lg">
          <li>Pay for 30 days of software development services</li>
          <li>Schedule a Zoom call to get started</li>
          <li>Add tasks to your Trello board</li>
          <li>Sit back and relax</li>
        </ol>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 pt-4">
        <a
          href="https://buy.stripe.com/9B67sM2DH0LhfOq4aeaEE06"
          class="btn btn-outline btn-primary"
          aria-label="Purchase development subscription"
        >
          Buy Now
        </a>

        <a
          href="sms:+14042134870?body=BOOK%20NOW"
          class="btn btn-outline btn-accent"
          aria-label="Book via SMS"
        >
          Book Now
        </a>
      </div>
    </div>
  </div>
</section>

