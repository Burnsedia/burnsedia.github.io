---
import { getEntryBySlug } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

const { slug } = Astro.params;
const post = await getEntryBySlug('blog', slug);
const { Content } = await post.render();
const { title, description, pubDate, updatedDate, heroImage } = post.data;
---

<html lang="en" data-theme="dark-synthwave">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="min-h-screen font-sans bg-base-100 text-base-content leading-6">
    <Header />
    <main class="py-20 flex flex-col justify-center items-center">
      <article class="w-full max-w-4xl px-4 sm:px-8 md:px-12 lg:px-16">
        {heroImage && <img class="w-full max-w-4xl rounded-md shadow-lg" src={heroImage} alt="" />}
        
        <!-- Control the heading -->
        <h1 class="title py-4 text-3xl md:text-4xl lg:text-5xl text-center">{title}</h1>
        
        <div class="text-center">
          <FormattedDate date={pubDate} />
          {updatedDate && <div class="last-updated-on">Last updated on <FormattedDate date={updatedDate} /></div>}
        </div>
        <hr />

        <div class="prose lg:prose-lg max-w-none text-base-content">
          <Content /> <!-- This strips frontmatter and renders markdown -->
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

